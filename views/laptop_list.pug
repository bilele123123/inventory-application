extends layout

block content
  h1= title

  ul
    each laptop in laptop_list
      li
        a(href=laptop.url)
          strong= laptop.model
          |  (Number in Stock: 
          span(class=laptop.numberInStock > 0 ? 'green' : 'red')
            strong #{laptop.numberInStock}
          | )
    else
      li There are no laptop.
